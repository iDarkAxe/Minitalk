{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug with String Input",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/client",
        "args": [
          "\"Je suis un texte\""
        ],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "Build"
      }
    ]
  }
